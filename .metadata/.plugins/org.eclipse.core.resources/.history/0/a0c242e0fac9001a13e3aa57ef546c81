import java.util.Scanner;

public class TicTacToe {

	public static void main(String[] args) {
		
		//Creating Game board 
		char[][] gameBoard = {{' ', '|', ' ', '|', ' '},
				{'-', '+', '-', '+', '-'},
				{' ', '|', ' ', '|', ' '},
				{'-', '+', '-', '+', '-'},
				{' ', '|', ' ', '|', ' '}};

		
		printGameBoard(gameBoard);
		
		//Allow user input 
		Scanner scan = new Scanner(System.in);
		// Will let user choose placement of x and y
		System.out.println("Enter your placement (1-9):");
		int pos = scan.nextInt();
		
		System.out.println(pos);
		
		//Creating player 1 and 2
		placePiece(gameBoard, pos,  "player" );
		placePiece(gameBoard, pos,  "cpu" );
		
		printGameBoard(gameBoard);
		
			
	}
	//Printing out the gameboard using a for loop
	public static void printGameBoard(char[] [] gameBoard) {
		for(char[] row: gameBoard) {
			for(char c: row) {
				System.out.print(c);
			}
			System.out.println();
		}
	}
	
	public static void placePiece(char [][] gameBoard, int pos, String user) {
		
		//if the user is a player then the symbol is x and computer is O
		
		char symbol = ' ';
		
		if(user.equals("player")) {
			symbol= 'X';
		}else if (user.equals("cpu")) {
			symbol = 'O';
		}
		
		//Will change the input to an X 
		switch(pos) {
		case 1:
			gameBoard[0][0] = symbol;
			break;
		case 2:
			gameBoard[0][2] = symbol;
			break;
		case 3:
			gameBoard[0][4] = symbol;
			break;
		case 4:
			gameBoard[2][0] = symbol;
			break;
		case 5:
			gameBoard[2][2] = symbol;
			break;
		case 6:
			gameBoard[2][4] = symbol;
			break;
		case 7:
			gameBoard[4][0] = symbol;
			break;
		case 8:
			gameBoard[4][2] = symbol;
			break;
		case 9:
			gameBoard[4][4] = symbol;
			break;
		}
	}
}

